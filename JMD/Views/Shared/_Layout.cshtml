@inject LanguageService language
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
          integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />

    @RenderSection("Slider",false)
</head>

<body>
    <!--=====================================-->
    <!--=        Header Start       	=-->
    <!--=====================================-->
    <header>
        <div class="container-lg  pt-4 px-sm-4 px-lg-0">
            <div class="d-flex justify-content-between">
                <div class="logo">
                    <a href="/">
                        <img src="~/assets/images/Group 1.png" alt="">

                    </a>
                </div>
                <div class="navbar">
                    <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 20 20" fill="none"
                         class="d-block d-md-none">
                        <path d="M1 1L19 19M1 19L19 1" stroke="white" />
                    </svg>
                    <ul>
                        <li><a href="/home/about">@language.Getkey("Haqqımda")</a></li>
                        <li><a href="/home/contact">@language.Getkey("Əlaqə")</a></li>
                        <li><a href="/home/order">@language.Getkey("Sifariş")</a></li>
                        <li>
                            <div class="custom-select">
                                <div class="selected-option"> @language.Getkey("AZ")</div>
                                <div class="options">
                                    <div class="option language-option"><a asp-controller="Language" asp-action="Change" asp-route-culture="az-AZ"> AZ</a></div>
                                    <div class="option language-option"><a asp-controller="Language" asp-action="Change" asp-route-culture="en-US"> EN</a></div>

                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
                <div class="bars pt-4 d-md-none d-block">

                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M15.5 17H21M9.5 12H21M3 7H21" stroke="white" stroke-width="2"
                              stroke-linecap="round" stroke-linejoin="round" />
                    </svg>
                </div>
            </div>
        </div>
    </header>

    @RenderBody()
    <script>
        $(document).ready(function () {
            $(".language-option").click(function () {
                var selectedLanguage = $(this).text().trim();
                $("#selectedLanguage").text(selectedLanguage);
            });
        });
    </script>
    <script src="~/assets/js/main.js"></script>
    @RenderSection("Swiper",false)
    @RenderSection("Scripts", false)
    
</body>

</html>